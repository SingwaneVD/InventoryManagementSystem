@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewBag.Title = "DisplayProduct";
}

<h2>Display Product</h2>

<p>
    @Html.ActionLink("Create New", "CreateProduct","Product", new {},new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Product Quantity")
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@class ="tbn tbn-primary"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "tbn tbn-success" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "tbn tbn-danger" })
        </td>
    </tr>
}

</table>
